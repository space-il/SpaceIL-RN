{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "@react-native-community"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"] // this is here due to a bug: https://github.com/typescript-eslint/typescript-eslint/issues/2552
    }
}
